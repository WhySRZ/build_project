<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="@dimen/margin20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/regist_white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_salary_expectation"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/salary_expectation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期望薪资 :"
                android:textColor="@color/text_color5"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_salary_expectation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/salary_expectation_title"
                android:text="3K - 4K"
                android:textSize="15dp"
                android:textColor="@color/text_color1"/>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/image_salary_expectation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/register_selector"/>
        </RelativeLayout>
        <View
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color3"
            />

        <RelativeLayout
            android:id="@+id/rl_exp_work_place"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/exp_work_place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="希望工作地:"
                android:textColor="@color/text_color5"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_exp_work_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/exp_work_place_title"
                android:text="广东 深圳"
                android:textSize="15dp"
                android:textColor="@color/text_color1"/>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/image_exp_work_place"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/register_selector"/>
        </RelativeLayout>
        <View
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color3"
            />
        <RelativeLayout
            android:id="@+id/rl_highest_edu"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/highest_edu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高学历 :"
                android:textColor="@color/text_color5"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_highest_edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/highest_edu_title"
                android:text="高中"
                android:textSize="15dp"
                android:textColor="@color/text_color1"/>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/image_highest_edu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/register_selector"/>
        </RelativeLayout>
        <View
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color3"
            />
        <RelativeLayout
            android:id="@+id/rl_work_exp"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/work_exp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作经验 :"
                android:textColor="@color/text_color5"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_work_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/work_exp_title"
                android:text="10年"
                android:textSize="15dp"
                android:textColor="@color/text_color1"/>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/image_work_exp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/register_selector"/>
        </RelativeLayout>
        <View
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color3"
            />
        <RelativeLayout
            android:id="@+id/rl_good_at"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/good_at_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长工种 :"
                android:textColor="@color/text_color5"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_good_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/good_at_title"
                android:text="砖瓦工"
                android:textSize="15dp"
                android:textColor="@color/text_color1"/>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/image_good_at"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/register_selector"/>
        </RelativeLayout>

    </LinearLayout>
