<?xml version="1.0" encoding="utf-8"?>
<com.ys.jsst.pmis.buildclass.ui.widegt.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/ripple"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/homemodule_px25dp"
        android:paddingLeft="@dimen/homemodule_px30dp"
        android:paddingRight="@dimen/homemodule_px30dp"
        android:paddingTop="@dimen/homemodule_px25dp">

        <ImageView
            android:id="@+id/item_iv_gv_rctop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_tv_gv_rctop"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/homemodule_tx_color_black1"
            android:textSize="13sp"/>

    </LinearLayout>
</com.ys.jsst.pmis.buildclass.ui.widegt.RippleView>