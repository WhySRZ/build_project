<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:orientation="vertical"
        >

    <!--设置标题和返回键-->
    <include
        android:id="@+id/protect_toolbar"
        layout="@layout/setting_tool_bar"/>
<LinearLayout
    android:id="@+id/ly_one"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin60"
    android:orientation="horizontal">
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/line_color2"
        android:textSize="16sp"
        android:text="问题一:"/>
    <TextView
        android:id="@+id/tv_question_one"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_color3"
        android:text="你最喜欢的动物是什么?"/>
    <ImageView
        android:layout_marginLeft="@dimen/margin15"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_down"
        />

</LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin10"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color2"
            android:textSize="16sp"
            android:text="答     案:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.ys.jsst.pmis.buildclass.ui.widegt.ClearEditText
            android:paddingRight="@dimen/margin30"
            android:paddingLeft="@dimen/margin10"
            android:textColor="@color/text_color"
            android:id="@+id/cet_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            android:background="@null"
            android:textColorHint="@color/hint"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/et_color"
            />
            <View
                android:layout_marginRight="@dimen/margin20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_two"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60"
        android:orientation="horizontal">
        <TextView

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color2"
            android:textSize="16sp"
            android:text="问题二:"/>
        <TextView
            android:id="@+id/tv_question_two"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color3"
            android:text="小学班主任姓名?"/>
        <ImageView
            android:layout_marginLeft="@dimen/margin15"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_down"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin10"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color2"
            android:textSize="16sp"
            android:text="答     案:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.ys.jsst.pmis.buildclass.ui.widegt.ClearEditText
                android:paddingRight="@dimen/margin30"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/text_color"
                android:id="@+id/cet_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:background="@null"
                android:textColorHint="@color/hint"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/et_color"
                />
            <View
                android:layout_marginRight="@dimen/margin20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_three"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60"
        android:orientation="horizontal">
        <TextView

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color2"
            android:textSize="16sp"
            android:text="问题三:"/>
        <TextView
            android:id="@+id/tv_question_three"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color3"
            android:text="你最喜欢的人是谁?"/>
        <ImageView
            android:layout_marginLeft="@dimen/margin15"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_down"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin10"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color2"
            android:textSize="16sp"
            android:text="答     案:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.ys.jsst.pmis.buildclass.ui.widegt.ClearEditText
                android:paddingRight="@dimen/margin30"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/text_color"
                android:id="@+id/cet_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:background="@null"
                android:textColorHint="@color/hint"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/et_color"
                />
            <View
                android:layout_marginRight="@dimen/margin20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:clickable="true"
        android:id="@+id/tv_protect_confirm"
        android:layout_width="292dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin30"
        android:background="@drawable/protect_confirm_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        />


</LinearLayout>


